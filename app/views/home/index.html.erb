<section id="1">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @banner.each_with_index do |banner, index| %>
      <li data-target="#myCarousel" data-slide-to="index" class="<%= index == 0 ? 'active': ' '  %>"></li>
      <% end %>
    </ol>

    <div class="carousel-inner" role="listbox">
    <% @banner.each_with_index do |banner, index| %>
      <div class="carousel-item <%= index == 0 ? 'active': ' '  %>">
        <%= image_tag banner.picture.url(:large), class: "img-fluid", alt: "Responsive image" %>
        <!-- <img class="first-slide" src="https://cdn-images-1.medium.com/max/2000/1*z9l86Mv1505QIgQfSqeW5A.jpeg" alt="First slide"> -->
        <div class="container">
          <% if !(banner.titulo.blank? &&  banner.descripcion.blank?) %>
          <div class="carousel-caption d-none d-md-block text-left bg3">
            <h1 class="animated <%=banner.a_titulo%>"><%= banner.titulo %></h1>
            <p class="animated <%=banner.a_descripcion%> "><%= banner.descripcion %></p>
            <!-- <p><a class="btn btn-lg btn-primary" href="https://v4-alpha.getbootstrap.com/examples/carousel/#" role="button">Sign up today</a></p> -->
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>

    <!-- <a class="carousel-control-prev" href="#" role="button" data-slide="prev">
