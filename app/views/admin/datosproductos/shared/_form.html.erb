

                <h1 class="page-header">Productos</h1>
                <% if @datosproducto.errors.any? %>
                  <div class="alert alert-danger alert-dismissable">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                      <ul>
                        <% @datosproducto.errors.full_messages.each do |messages| %>
                        <li><%= messages%></li>
                        <% end %>
                      </ul>
                  </div>
                  <%end%>

                <!-- <div class="col-lg-6"> -->
                    <div class="panel panel-default">
                        <div class="panel-heading">

                          <%= action %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                          <div class="col-lg-6">
                            <%= form_for([:admin, @datosproducto], :html => { :multipart => true } ) do |f|%>


                              <div class="form-group">
                                  <%=f.label :productos%><br>

                                  <%= f.select :producto_id, @producto.map{ |c| [c.nombre, "#{c.id}"] }, {}, {class:'form-control'}%>
                              </div>
                              <div class="form-group">
                                  <%=f.label :nombre%><br>
                                  <%= f.text_field :nombre, class: "form-control"%>
                              </div>
                              <div class="form-group">
                                  <%=f.label :descripcion%><br>
                                  <%= f.text_field :descripcion, class: "form-control"%>
                              </div>
                              <div class="form-group">
                                  <%=f.label :color_bg%><br>
                                  <%= f.text_field :color_bg, class: "form-control"%>
                              </div>

                              <div class="form-group">
                                  <%=f.label :picture%><br>
                                  <%=f.file_field :picture, class:"btn btn-default"%>

                              </div>



                              <button type="submit" class="btn btn-default">Salvar</button>
                            <%end%>

                          </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                <!-- </div> -->
